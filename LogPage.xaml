<Window x:Class="ChatClient.LogPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogPage" Height="300" Width="500">
    <Grid>
        <!-- 使用 RichTextBox 来显示日志，支持颜色 -->
        <RichTextBox Name="LogRichTextBox" VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto" IsReadOnly="True" 
                     VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                     />
    </Grid>
</Window>
